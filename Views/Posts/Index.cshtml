@model IEnumerable<konoha.Models.Post>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<div class="row m-1 p-3 border">
    <div class="col-8">
        <h4>Mis Artículos</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-info w-100" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Editar Cuenta</a>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-secondary w-100" asp-area="Identity" asp-page="/Account/Logout" title="Cerrar Sección">Cerrar Sección</a>
    </div>
</div>
<div class="row mt-5">
    <div class="col-12 card-columns">
    @foreach (var item in Model) {
        <div class="card">
            <a asp-action="Details" asp-route-id="@item.PostID">
            @if (@item.Images.Any())
            {
                <img class="card-img-top" src="~/images/posts/@item.Images[0].ImagePath" alt="@item.Title">    
            } else
            {
                <img class="card-img-top" src="~/images/image_example.svg" alt="@item.Title">    
            }
            </a>
            
            <div class="card-body">
                <a asp-action="Details" asp-route-id="@item.PostID">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                </a>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
            <div class="card-footer">
                <h5 class="text-right mb-0">RD$ @item.Price</h5>
            </div>
        </div>
    }
  </div>
</div>