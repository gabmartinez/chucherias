@model konoha.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <h2>Publicación</h2>
        <hr />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostID" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="CreatedDate" />
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <label class="btn w-100 btn-outline-secondary" for="fileImages"><i class="fas fa-camera"></i> Búscalas en tu dispositivo</label>
                <input id="fileImages" style="display:none" class="form-control-file" type="file" name="Images" accept="image/*" multiple/>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col p-0 mr-3">
                            <a asp-action="Details" asp-route-id="@Model.PostID" class="btn text-secondary w-100" style="background: #efefef">Regresar</a>
                        </div>
                        <div class="col p-0">
                            <input type="submit" value="Guardar" class="btn text-white w-100" style="background: #ff5063" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
