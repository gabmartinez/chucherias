@model IEnumerable<konoha.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-3">
    <div class="col-10"><h2>Listado de Categorias</h2></div>

    <div class="col-2">
        <a class="btn text-white" style="background: #ff5063" asp-action="Create" role="button">Crear Categoria</a>                
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acronym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desciption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acronym)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desciption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
